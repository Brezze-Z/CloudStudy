<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hewei.cloud.dao.PaymentDao">

    <resultMap type="com.hewei.cloud.entity.Payment" id="PaymentMap">

        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="serial" column="serial" jdbcType="VARCHAR"/>

    </resultMap>

    <!--增加-->
    <insert id="insetPayment" useGeneratedKeys="true" keyProperty="id">
        insert into payment(serial) values(#{serial});
    </insert>


    <select id="selById" resultType="com.hewei.cloud.entity.Payment">
         select * from payment where payment.id = #{id};
    </select>


</mapper>